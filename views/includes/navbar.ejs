<style>
  .d-flex {
    display: flex;
  }

  .align-items-center {
    align-items: center;
  }

  .me-2 {
    margin-right: 0.5rem;
  }

  .me-1 {
    margin-right: 0.25rem; 
  }

  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem;
    display: flex;
    align-items: center;
    border: none; 
  }

  .search-btn:hover {
    background-color: #fe424d;
    color: #fff;
  }

  .search-btn i {
    margin-right: 0.5rem;
  }

  .mt-1, .mb-1 {
    margin-top: 0.25rem;
    margin-bottom: 0.25rem;
  }
  .search-inp{
    border-radius: 25px;
    padding: 0.5rem 3rem 0.5rem 3rem;

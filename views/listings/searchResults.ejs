<% layout("/layouts/boilerplate") %>

<h2>Search Results for "<%= query %>"</h2>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% if(listings.length > 0) { %>
    <% listings.forEach(listing => { %>
      
        <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card col listing-card">
                <img class="card-img-top" src="<%= listing.image.url %>" alt="listing_image" style="height: 20rem;" />
                <div class="card-img-overlay"></div>
                <div class="card-body">
                <p class="card-text"><b><%= listing.title %></b> <br>  &#8377;<%= listing.price.toLocaleString("en-IN") %>/night<i class="tax-info"> &nbsp;+18% GST</i><br> <%= listing.location %> <br> <%= listing.country %>
                </p>
                </div>
            </div>
        </a>
    <% }) %>
  <% } else { %>
    <p>No listings found for "<%= query %>".</p>
  <% } %>
</div>
<% layout("/layouts/boilerplate") %>
<div class="row mt-4">
    <div class="col-8 offset-3">
<!-- Row and col div has been created so that content center mein aa jaye -->
        <h3><%= listing.title %></h3>
    </div>
    <div class="card col-6 offset-3 show-card listing-card">
        <img class="card-img-top show-img" src="<%= listing.image %>" alt="listing_image">
        <div class="card-body">
          <p class="card-text">Owned By: <i><%= listing.owner.username %></i></p>
          
          <p class="card-text"><%= listing.description  %> </p>
          <p class="card-text">&#8377; <%= listing.price.toLocaleString("en-IN") %></p>
          <p class="card-text"><%= listing.location %></p>
          <p class="card-text"><%= listing.country %> </p>
          <br>
        </div>
      </div>
<br>
  <div class="btns">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" ><button class="btn btn-dark offset-5 ">Delete</button></form>
  </div>
  <div class="col-8 offset-3 mb-3">
      <hr>
      <h4>Leave a Review</h4>
      <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
        <!-- Needs validation logic written in script.js -->
        <div class="mb-3 mt-3">
          <label for="rating" class="form-label">Rating</label>
          <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
          <!-- class="form-range" is bootstrap class for range.It means ki jitni jagah lega rating wala bar -->
        </div>
        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comments</label>
          <textarea name="review[comment]" id="comment" cols="30" rows="10" class="form-control" required></textarea>
          <div class="invalid-feedback">Please add some comments for review</div>
          <!-- to abhi koi website se empty review nhi bhej sakta but abhi bhi hoppscotch se bheja jaa sakta hai empty review therefore server side validation ki bhi zarurat hai-->
        </div>
        <button class="btn btn-outline-dark">Submit</button>
      </form>
      <hr>
      <p><b>All Reviews</b></p>
      <div class="row">
      <% for(review of listing.reviews){ %>
        <div class="card col-5 ms-3 mb-3">
          <div class="card-body">
            <h5 class="card-title">Jane Doe</h5>
            <p class="card-text"><%= review.comment %></p>
            <p class="card-text"><%= review.rating %> stars</p>
            
          </div>
          <form class="mb-3" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
            <button class="btn btnsm btn-dark">Delete</button>
          </form>
        </div>
      <% } %>
    </div>
  </div>
</div>